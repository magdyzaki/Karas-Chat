# مفتاح JWT
JWT_SECRET=chat-secret-change-in-production

# تنبيهات الدفع (عند إغلاق التطبيق) — شغّل: node generate-vapid.js
# VAPID_PUBLIC_KEY=...
# VAPID_PRIVATE_KEY=...
# وأضف VAPID_PUBLIC_KEY في frontend كـ VITE_VAPID_PUBLIC_KEY

# السماح بمسح كل البيانات من القائمة (مسح كل البيانات والتسجيل من جديد)
# ALLOW_DB_RESET=true

# Giphy للبحث عن GIF — احصل على مفتاح مجاني من https://developers.giphy.com
# GIPHY_API_KEY=...

# السماح بعرض رمز التحقق من الملف (عند إغلاق الباورشيل) — وضع التطوير
# ALLOW_DEV_CODE=true

# وضع الموافقة: المستخدم يسجّل وينتظر، المسؤول يفعّل الحساب من القائمة (بدون رموز تحقق)
# APPROVAL_MODE=true

# تأكيد الحساب:
# - بدون إعداد: وضع التطوير — الرمز يُطبع في وترمن الباكند
# - تعطيل التأكيد: SKIP_VERIFICATION=true

# Resend للبريد (مجاني 100/يوم) — https://resend.com
RESEND_API_KEY=re_xxxx
# RESEND_FROM=Karas شات <noreply@yourdomain.com>

# أو SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=...
# SMTP_PASS=...
# SMTP_FROM=...

# أو Twilio للـ SMS
# TWILIO_ACCOUNT_SID=...
# TWILIO_AUTH_TOKEN=...
# TWILIO_PHONE=+1234567890
